{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/rreents/buderus-wps-ha/schemas/can-recording.json",
  "title": "CAN Traffic Recording",
  "description": "JSON schema for CAN bus traffic recordings from Buderus WPS heat pumps",
  "type": "object",
  "required": ["metadata", "frames"],
  "properties": {
    "metadata": {
      "type": "object",
      "description": "Recording session metadata",
      "required": ["recorded_at", "duration_seconds", "frame_count", "port"],
      "properties": {
        "recorded_at": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp when recording started"
        },
        "duration_seconds": {
          "type": "number",
          "minimum": 0,
          "description": "Total duration of recording in seconds"
        },
        "frame_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of CAN frames captured"
        },
        "port": {
          "type": "string",
          "minLength": 1,
          "description": "Serial port used for recording (e.g., /dev/ttyACM0)",
          "examples": ["/dev/ttyACM0", "/dev/ttyUSB0", "COM3"]
        },
        "description": {
          "type": "string",
          "maxLength": 500,
          "description": "User-provided description of recording scenario"
        }
      },
      "additionalProperties": false
    },
    "frames": {
      "type": "array",
      "description": "Ordered sequence of CAN frames",
      "items": {
        "type": "object",
        "required": ["timestamp", "can_id", "dlc", "data"],
        "properties": {
          "timestamp": {
            "type": "number",
            "minimum": 0,
            "description": "Time offset from recording start in seconds (float)"
          },
          "can_id": {
            "type": "string",
            "pattern": "^0x[0-9A-F]{8}$",
            "description": "Extended CAN ID in hex format (e.g., 0x0C003060)"
          },
          "dlc": {
            "type": "integer",
            "minimum": 0,
            "maximum": 8,
            "description": "Data Length Code (number of data bytes, 0-8)"
          },
          "data": {
            "type": "string",
            "pattern": "^[0-9A-F]{0,16}$",
            "description": "Data bytes as uppercase hex string without delimiters (length = dlc * 2)"
          },
          "description": {
            "type": "string",
            "maxLength": 200,
            "description": "Optional human-readable description (e.g., parameter name and value)"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
